<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Instagram.FormContainer">
        <item name="android:layout_marginStart">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
    </style>

    <style name="Theme.Instagram.FormEditText" parent="Theme.Instagram.FormEditTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:background">@drawable/edt_text_background</item>
    </style>

    <style name="Theme.Instagram.FormEditTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Theme.Instagram.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/btn_background</item>
    </style>

    <style name="Theme.Instagram.TextViewBase" parent="Theme.Instagram.FormContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Theme.Instagram.TextViewBase.Form">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="Theme.Instagram.Link" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_enable</item>
    </style>

    <style name="Theme.Instagram.TextViewProfile">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="Theme.Instagram.Button.White" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="strokeColor">?colorPrimaryVariant</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">?colorOnPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.Instagram.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="Theme.RemoveSplashScreenTheme" parent="Theme.Instagram">
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>